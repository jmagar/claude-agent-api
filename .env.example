# Required - Anthropic API key for Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:53432/claude_agent

# Cache (Redis)
REDIS_URL=redis://localhost:53379/0

# API Settings
API_HOST=0.0.0.0
API_PORT=53000
